<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="112dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tictactoe"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/trade_winds"
        android:padding="8dp"
        android:shadowColor="#000000"
        android:shadowDx="3"

        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="@string/app_name"
        android:textColor="#389781"
        android:textSize="28sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/play_offline_btn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:backgroundTint="#E4B4E3"
        android:fontFamily="@font/acme"
        android:padding="8dp"
        android:shadowColor="@color/white"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="PLAY OFFLINE"
        android:textColor="#222222" />


    <Button
        android:id="@+id/create_online_game_btn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:backgroundTint="#E4B4E3"
        android:fontFamily="@font/acme"
        android:padding="8dp"
        android:shadowColor="@color/white"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="CREATE GAME ONLINE"
        android:textColor="#222222" />

    <EditText
        android:id="@+id/game_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/acme"
        android:hint="Enter game Id"
        android:inputType="number"
        android:paddingTop="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AEAEAE"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/join_online_game_btn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:backgroundTint="#E4B4E3"
        android:fontFamily="@font/acme"
        android:padding="8dp"
        android:shadowColor="@color/white"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="10"
        android:text="JOIN GAME ONLINE"
        android:textColor="#222222" />

</LinearLayout>

